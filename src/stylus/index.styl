@import "nib"
@import "nib/index"
global-reset()

*
    user-select:none

body
    background:white
    width:100%
    height:100%
    overflow:hidden
    background: url("../images/bg.jpg") center center
    background-repeat repeat


header
    width:586px
    height 190px
    margin:0 auto
    display:table

    h1
        font-family "Josefin Slab" , serif
        font-weight 700
        font-size:48px
        color: #f23f63
        text-align:center
        width:100%
        display:table-cell
        vertical-align:middle

        &:after , &:before
            content:" "
            height:20px
            display:block
            width:100%
            background: url("../images/filigree.png") center center no-repeat

        &:before
            transform: scale(-1)


#envelope-container
    width:586px
    margin 0 auto
    position: relative



.card
    width:491px
    height:290px
    margin:0 auto
    position: relative
    background: url("../images/card.png") center center no-repeat

    .card-content
        padding:40px 60px
        font-family: "Josefin Slab" , sans-serif
        color:white

        .salutation
            font-size:20pt

        p
            font-size:18px
            padding:20px

        .closing
            font-size:20px
            text-align:center
            width:100%
            display: block



.pull
    width:56px
    height:93px
    position:absolute
    background: url("../images/pull.png") center center no-repeat
    margin-left: -28px
    left:50%
    top:-70px
    cursor:pointer




.envelope
    width:522px
    position relative
    margin: 0 auto

    &.contents
        position: absolute
        width: 586px
        top:285px

    &.back
        background url("../images/envelope_back.png") center center no-repeat
        height:396px
        margin-bottom: -175px

    &.front
        background url("../images/envelope_front.png") center center no-repeat
        height:363px
        pointer-events: none
